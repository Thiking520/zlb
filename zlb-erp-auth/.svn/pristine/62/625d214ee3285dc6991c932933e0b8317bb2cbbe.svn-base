<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zhilianbao.erp.auth.mapper.goods.GoodsStockMapper" >
  <resultMap id="BaseResultMap" type="com.zhilianbao.erp.auth.vo.goods.GoodsStockVo" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="sale_unit" property="saleUnit" jdbcType="VARCHAR" />
    <result column="purchase_mode" property="purchaseMode" jdbcType="BIT" />
    <result column="can_sale_amount" property="canSaleAmount" jdbcType="INTEGER" />
    <result column="over_amount" property="overAmount" jdbcType="INTEGER" />
    <result column="sale_amount" property="saleAmount" jdbcType="INTEGER" />
    <result column="sale_rate" property="saleRate" jdbcType="REAL" />
    <result column="stock_unit" property="stockUnit" jdbcType="VARCHAR" />
    <result column="stock_amount" property="stockAmount" jdbcType="INTEGER" />
    <result column="available_amount" property="availableAmount" jdbcType="INTEGER" />
    <result column="used_amount" property="usedAmount" jdbcType="INTEGER" />
    <result column="loss_amount" property="lossAmount" jdbcType="INTEGER" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="creator" property="creator" jdbcType="VARCHAR" />
    <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
    <result column="modifier" property="modifier" jdbcType="VARCHAR" />
    <result column="deleted" property="deleted" jdbcType="BIT" />
  </resultMap>
  
  <sql id="Base_Column_List" >
    id, sale_unit, purchase_mode, can_sale_amount, over_amount, sale_amount, sale_rate, 
    stock_unit, stock_amount, available_amount, used_amount, loss_amount, create_time, 
    creator, update_time, modifier, deleted
  </sql>
  
  <!-- 根据goodsId获取库存信息 -->
  <select id="getStockByGoodsId" resultMap="BaseResultMap">
	SELECT stock.* from t_goods_stock stock 
	LEFT JOIN t_goods_item item on stock.id = item.goods_stock_id
	where item.goods_id = #{id}
  </select>
  
  <!-- 根据库存id获取对象 -->
  <select id="getByStockId" resultMap="BaseResultMap">
	SELECT <include refid="Base_Column_List" /> from t_goods_stock 
	where id = #{goods_stock_id}
  </select>
</mapper>