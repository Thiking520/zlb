  <select id= "findAuthByRoleId" resultMap="BaseResultMap">
  	select * from t_role_menu_list where role_id = #{roleId} and enabled = true and deleted = false
  </select>
  
  <select id= "findAuthByRoleAndMenu" resultMap="BaseResultMap">
  	select rm.* from t_role_menu_list rm LEFT JOIN t_menu m ON rm.menu_id = m.id where rm.role_id = #{roleId} and rm.menu_id=#{menuId} and m.isprivate = 0
  </select>
  
  <update id="updateBatch" parameterType="com.zhilianbao.erp.auth.entity.user.RoleMenuListBean">
  	update t_role_menu_list set enabled = false where role_id=#{roleId} and menu_id in 
   	<foreach collection="menuIds" item="item" index="index" open="(" separator="," close=")" >
   		#{item}
   	</foreach>
  </update>
  
  <update id="updateStatusTrueById" parameterType="com.zhilianbao.erp.auth.entity.user.RoleMenuListBean">
  	update t_role_menu_list set id=#{id}
