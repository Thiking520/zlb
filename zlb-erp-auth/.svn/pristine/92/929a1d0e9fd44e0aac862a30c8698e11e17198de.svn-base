<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zhilianbao.erp.auth.mapper.goods.GoodsPropertyListMapper" >
  <resultMap id="BaseResultMap" type="com.zhilianbao.erp.auth.vo.goods.GoodsPropertyListVo" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="property_id" property="propertyId" jdbcType="BIGINT" />
    <result column="goods_id" property="goodsId" jdbcType="BIGINT" />
    <result column="property_item_value" property="propertyItemValue" jdbcType="VARCHAR" />
  </resultMap>
  
  <!-- t_goods_property_list 和 t_goods_property -->
  <resultMap id="GetByPropertyIdMap" type="com.zhilianbao.erp.auth.vo.goods.GoodsPropertyListVo" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="property_id" property="propertyId" jdbcType="BIGINT" />
    <result column="goods_id" property="goodsId" jdbcType="BIGINT" />
    <result column="property_item_value" property="propertyItemValue" jdbcType="VARCHAR" />
    <result column="type" property="type" jdbcType="SMALLINT" />
  </resultMap>
  
  <sql id="Base_Column_List" >
    id, property_id, goods_id, property_item_value
  </sql>
  
  <!-- 根据goods_id获取属性数据 -->
  <select id="getPropertyListByGoodsId" resultMap="BaseResultMap">
  	SELECT <include refid="Base_Column_List" /> FROM t_goods_property_list list
  	where list.goods_id = #{goodsId}
  </select>
  
  <!-- 根据property_id获取属性数据 -->
  <select id="getListByPropertyId" resultMap="GetByPropertyIdMap">
  	SELECT list.*, property.type from (SELECT <include refid="Base_Column_List" /> FROM t_goods_property_list) list 
	LEFT JOIN t_goods_property property on list.property_id = property.id
	where list.property_id=#{id}
  </select>
</mapper>