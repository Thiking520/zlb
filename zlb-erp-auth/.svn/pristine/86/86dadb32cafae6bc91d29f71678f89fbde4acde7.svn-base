<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zhilianbao.erp.auth.mapper.goods.GoodsTagListMapper" >
  <resultMap id="BaseResultMap" type="com.zhilianbao.erp.auth.vo.goods.GoodsTagListVo" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="tag_id" property="tagId" jdbcType="BIGINT" />
    <result column="goods_id" property="goodsId" jdbcType="BIGINT" />
  </resultMap>
  
  <sql id="Base_Column_List" >
    id, tag_id, goods_id
  </sql>
  
  <!-- 商品标签，删除操作时，查询要删除的t_goods_tag有没有被引用 -->
  <select id="getCountByDeleteIds" resultType="Integer">
  	SELECT COUNT(*) from t_goods_tag_list list where list.tag_id in 
  	<foreach collection="deleteIds" item="item" index="index" open="(" separator="," close=")" >
	   	#{item}
	</foreach>
  </select>
</mapper>