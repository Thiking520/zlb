package com.zhilianbao.erp.auth.mapper.user;

import java.util.List;

import com.zhilianbao.erp.auth.entity.user.UserAdminBean;
import com.zhilianbao.erp.auth.vo.user.LoginManagerOperatorVo;
import com.zhilianbao.erp.auth.vo.user.LoginMenuVo;
import com.zhilianbao.erp.auth.vo.user.LoginOperatorVo;
import com.zhilianbao.erp.auth.vo.user.LoginUserVo;
import com.zhilianbao.erp.auth.vo.user.LoginVo;
import com.zhilianbao.erp.auth.vo.user.RetUserVo;
import com.zhilianbao.erp.auth.vo.user.UserPageVo;
import com.zhilianbao.erp.auth.vo.user.UserVo;
import com.zhilianbao.erp.common.mapper.BaseMapper;

public interface UserMapper extends BaseMapper<UserAdminBean> {
	/***
	 * 用户登录
	 * @param loginVo
	 * @return
	 */
    public LoginUserVo doLogin(LoginVo loginVo);
    /***
     * 获取用户菜单
     * @param loginOperatorVo
     * @return
     */
    public List<LoginMenuVo> queryAllMenu(LoginOperatorVo loginOperatorVo);
    /***
     * 获取多用户信息
     * @param list
     * @return
     */
    public List<RetUserVo> mulUserName(List<Long> list);
	/***
	 * 获取运维管理运营商列表
	 * @param loginOperatorVo
	 * @return
	 */
	public List<LoginManagerOperatorVo> qryManagerOperator(LoginOperatorVo loginOperatorVo);
    
    /**
    * @Title: getUserInfoByLoginAccount
    * @author chengjianhui
    * @date 2017年3月25日上午11:45:47
    * @param loginVo
    * @return LoginUserVo
    * @description:通过登录账号获取用户信息
    */
    public LoginUserVo getUserInfoByLoginAccount(LoginVo loginVo);
    /**
     * 分页查找用户列表
     * @param vo
     * @return
     */
    public List<UserVo> queryUsersListByPage(UserPageVo vo);
    /**
     * 通过用户ID查找用户
     * @param vo
     * @return
     */
	public UserVo findUserById(UserVo vo);
	/**
	 * 通过电话号码查找是否已经存在
	 * @param uservo
	 * @return
	 */
	public UserVo findUserNameIsExist(UserVo uservo);

	/**
	 * 分页查找所有用户列表
	 * @param vo
	 * @return
	 */
	public List<UserVo> queryUsersList(UserPageVo vo);

	/**
	 * 通过ID获取一个用户信息
	 * @param vo
	 * @return
	 */
	public UserVo getUserInfo(UserVo vo);

	/**
    * @Title: getSimpleUserInfo
    * @author chengjianhui
    * @date 2017年3月23日上午11:32:56
    * @param vo
    * @return ResponseResult<UserVo>
    * @description:获取用户基本信息
    */
    public UserVo getSimpleUserInfo(UserVo vo);

    /**
     * 通过用户名查找一个用户（包括已经禁用和删除的）
     * @param userVo
     * @return
     */
	public UserVo findIsExistByUserName(UserVo userVo);
	/**
	 * 通过用户ID和菜单名称判断是否拥有该菜单
	 * @param usvo
	 * @return
	 */
	public UserVo isOwnThisMenu(UserVo usvo);
	/**
	 * 通过统一中心的userId查找一个用户
	 * @param userVo
	 * @return
	 */
	public UserVo findByCenterId(UserVo userVo);
	
	/**
	 * 通过员工帐号关系表ID查找用户
	 * @param vo
	 * @return
	 */
	public UserVo findUserByEmployeeAccountListID(UserVo vo);
	/**
	 * 查找所有运维（运营商ID为0的）
	 * @return
	 */
	public List<UserVo> findAllSuperAdmins();
	/**
	 * 更新用户状态（启用/禁用）
	 * @param userBean
	 */
	public void updateUserStatus(UserAdminBean userBean);
	/**
	 * 通过单个或多个员工帐号关系ID查找用户列表
	 * @param vo
	 * @return
	 */
	public List<UserVo> findBatchUserByEmployeeAccountListID(UserVo vo);
	
	/**
	 * 通过用户名查找
	 * @param userMobile
	 * @return
	 */
	public List<UserVo> findByUserName(String userMobile);
	
	/**
	 * 通过员工帐号关系ID查找已经禁用的员工的账号
	 * @param vo
	 * @return
	 */
	public List<UserVo> findBatchDisEmpUserByEmployeeAccountListID(UserVo vo);
	
	/**
	 * 通过角色查找所有用户
	 * @param userVo
	 * @return
	 */
	public List<UserVo> findUserByRole(UserVo userVo);
	
}
