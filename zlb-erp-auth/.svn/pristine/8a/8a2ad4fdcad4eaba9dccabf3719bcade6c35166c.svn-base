<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zhilianbao.erp.auth.mapper.parameter.SystemCodeRuleMapper" >
  <resultMap id="BaseResultMap" type="com.zhilianbao.erp.auth.vo.parameter.SystemCodeRuleVo" >

    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="operator_id" jdbcType="BIGINT" property="operatorId" />
    <result column="flow_code" jdbcType="VARCHAR" property="flowCode" />
    <result column="status" jdbcType="INTEGER" property="status" />
    <result column="flow_type" jdbcType="VARCHAR" property="flowType" />
    <result column="prefix" jdbcType="VARCHAR" property="prefix" />
    <result column="delivery_record_id" jdbcType="INTEGER" property="deliveryRecordId" />
    <result column="date_format" jdbcType="VARCHAR" property="dateFormat" />
    <result column="flow_length" jdbcType="INTEGER" property="flowLength" />
    <result column="description" jdbcType="VARCHAR" property="description" />
    <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    <result column="creator" jdbcType="BIGINT" property="creator" />
    <result column="update_time" jdbcType="TIMESTAMP" property="updateTime" />
    <result column="modifier" jdbcType="BIGINT" property="modifier" />
    <result column="deleted" jdbcType="INTEGER" property="deleted" />
  </resultMap>
 
   <resultMap id="CodeRuleResultMap" type="com.zhilianbao.erp.common.entity.system.CodeRuleBean">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="operator_id" jdbcType="BIGINT" property="operatorId" />
    <result column="flow_code" jdbcType="VARCHAR" property="flowCode" />
    <result column="status" jdbcType="INTEGER" property="status" />
    <result column="flow_type" jdbcType="VARCHAR" property="flowType" />
    <result column="prefix" jdbcType="VARCHAR" property="prefix" />
    <result column="delivery_record_id" jdbcType="INTEGER" property="deliveryRecordId" />
    <result column="date_format" jdbcType="VARCHAR" property="dateFormat" />
    <result column="flow_length" jdbcType="INTEGER" property="flowLength" />
    <result column="description" jdbcType="VARCHAR" property="description" />
  </resultMap>
  
 <sql id="Base_Column_List">
   	id, operator_id, flow_code, status, flow_type, prefix, delivery_record_id, date_format, 
    flow_length, description, create_time, creator, update_time, modifier, deleted
  </sql>
  <sql id="Page_Where_Sql">
    <trim prefix="WHERE" prefixOverrides="AND |OR ">
		<if test="vo.id != null and vo.id != ''">
			AND id = #{vo.id}
		</if>
		<if test="vo.searchKey != null and vo.searchKey != ''">
			AND flow_code like concat('%',#{vo.searchKey},'%')
		</if>
		<if test="vo.searchType != null and vo.searchType != ''">
			AND flow_type  like concat('%',#{vo.searchType},'%')
		</if>
		<if test="vo.status != null and vo.status != ''">
			AND status  = #{vo.status}
		</if>
	</trim>
   </sql>
    <select id="getPageByVo" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from t_system_code_rule
		<include refid="Page_Where_Sql" />
		<if test="vo.sort != null and vo.sort != '' and vo.order != null and vo.order != ''">
			order by ${vo.sort} ${vo.order}
		</if>
		<if test="vo.sort != null and vo.sort != '' and ( vo.order == null or vo.order == '')">
			order by ${vo.sort}
		</if>
		<if test="vo.sort == null or vo.sort == ''">
			order by create_time desc
		</if>
	</select>
		
	<select id="getAllList" resultMap="CodeRuleResultMap">
		select
		<include refid="Base_Column_List" />
		from t_system_code_rule
		WHERE status = 1
		AND deleted = 0
	</select>
 
</mapper>