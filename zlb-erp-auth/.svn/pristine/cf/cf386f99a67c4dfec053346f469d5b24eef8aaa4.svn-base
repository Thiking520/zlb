<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zhilianbao.erp.auth.mapper.goods.GoodsSkuRecodeMapper" >
  <resultMap id="BaseResultMap" type="com.zhilianbao.erp.auth.vo.goods.GoodsSkuRecodeVo" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="parent_id" property="parentId" jdbcType="BIGINT" />
    <result column="sku_id" property="skuId" jdbcType="BIGINT" />
    <result column="sku_name" property="skuName" jdbcType="VARCHAR" />
  </resultMap>

  <sql id="Base_Column_List" >
    id, parent_id, sku_id, sku_name
  </sql>
  
  <!-- 商品规格，删除操作时，查询要删除的t_goods_sku有没有被引用 -->
  <select id="getCountByDeleteIds" resultType="Integer">
  		SELECT COUNT(*) from t_goods_sku_recode recode where recode.sku_id in 
  		<foreach collection="deleteIds" item="item" index="index" open="(" separator="," close=")" >
	   		#{item}
	   	</foreach>
  </select>
</mapper>