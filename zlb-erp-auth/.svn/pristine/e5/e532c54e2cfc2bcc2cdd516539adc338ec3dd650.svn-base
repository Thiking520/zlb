<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zhilianbao.erp.auth.mapper.goods.GoodsItemMapper" >
  <resultMap id="BaseResultMap" type="com.zhilianbao.erp.auth.vo.goods.GoodsItemVo" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="goods_id" property="goodsId" jdbcType="BIGINT" />
    <result column="goods_stock_id" property="goodsStockId" jdbcType="BIGINT" />
    
    <result column="relate_original_good" property="relateOriginalGood" jdbcType="BIGINT" />
    <result column="conversion_rate" property="conversionRate" jdbcType="DECIMAL" />
  </resultMap>
  
  <sql id="Base_Column_List" >
    id, goods_id, goods_stock_id,relate_original_good,conversion_rate
  </sql>
  
  <!-- 单品：根据goodsId查询详情列表 -->
  <select id="queryByGoodsId" resultMap="BaseResultMap">
  	SELECT <include refid="Base_Column_List" /> FROM t_goods_item item where item.goods_id = #{goodsId}
  </select>
  
    <!-- 单品：根据goodsId查询详情列表 -->
  <select id="getById" resultMap="BaseResultMap">
  	SELECT <include refid="Base_Column_List" /> FROM t_goods_item item where item.id = #{id}
  </select>
  
   <!-- 修改转换率 -->
  <update id="updateConversionRate">
  	UPDATE t_goods_item SET relate_original_good = #{relateOriginalGood},conversion_rate = #{conversionRate} WHERE goods_id = #{goodsId}
  </update> 
</mapper>