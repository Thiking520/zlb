package com.zhilianbao.erp.auth.impl.user.facade;

import java.util.ArrayList;
import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.zhilianbao.erp.auth.service.user.IUserService;
import com.zhilianbao.erp.auth.service.user.facade.IUserRestService;
import com.zhilianbao.erp.auth.vo.user.RetUserVo;
import com.zhilianbao.erp.auth.vo.user.facade.ParaUserNameRestVo;
import com.zhilianbao.erp.auth.vo.user.facade.ParaUserRestVo;
import com.zhilianbao.erp.common.vo.ResponseValue;

@Service
public class UserRestServiceImpl implements IUserRestService {

	@Autowired
	private IUserService userService;
	
	@Override
	public ResponseValue<List<RetUserVo>> mulUserName(ParaUserRestVo paraUserRestVo) {
		ResponseValue<List<RetUserVo>> responseValue=new ResponseValue<List<RetUserVo>>();
		if(paraUserRestVo == null){
			return responseValue.failure("多用户信息，参数为空！");
		}
		List<RetUserVo> userList = userService.mulUserName(paraUserRestVo.getList());
		return responseValue.success(userList);
	}

	@Override
	public ResponseValue<RetUserVo> userName(ParaUserNameRestVo paraUserNameRestVo) {
		ResponseValue<RetUserVo> responseValue=new ResponseValue<RetUserVo>();
		if(paraUserNameRestVo == null){
			return responseValue.failure("用户信息，参数为空！");
		}
		
		List<Long> list=new ArrayList<Long>();
		list.add(paraUserNameRestVo.getUserId());
		List<RetUserVo> userList = userService.mulUserName(list);
		
		RetUserVo retUserVo=null;
		if(userList != null && userList.size()>0){
			retUserVo=userList.get(0);
		}
		
		return responseValue.success(retUserVo);
	}

}
