  <select id="queryUsersListByPage" parameterType="com.zhilianbao.erp.auth.vo.user.UserPageVo" resultMap="userVoResultMap">
	select 
		u.*,r.role_name 
	from 
		t_user_admin as u,t_role as r,t_user_role_list as l 
	WHERE 
		u.id = l.admin_id 
		and l.role_id = r.id 
		and u.deleted = false 
		and l.deleted = false 
		and r.deleted = false 
		and r.enabled = true
		
		<if test="uniquekey != null and uniquekey != ''">
			and u.uniqueKey = #{uniquekey}
		</if>
		<if test="username != null and username != ''">
			and u.user_name = #{username}
		</if>
		<if test="nickname != null and nickname != ''">
			and u.nickname like '%${nickname}%'
		</if>
		<if test="enabled != null">
			and u.enabled = #{enabled}
		</if>
		<if test="operatorId != null">
			and ei.operator_id = #{operatorId}
		</if>
		<if test="mobileNo != null and mobileNo != ''">
			and u.mobile_no = #{mobileNo}
		</if>
		<if test="roleName != null and roleName != ''">
			and r.role_name like '%${roleName}%'
		</if>
  </select>
  
  
  <select id="queryUsersList" parameterType="com.zhilianbao.erp.auth.vo.user.UserPageVo" resultMap="userVoResultMap">
	select 
		o.company_name as companyName,u1.user_name as creatorStr,u2.user_name as modifierStr,u.user_name,u.enabled,r.role_name,ei.occupation_id,ei.cn_name,ei.en_name,ei.mobile_no,ei.operator_id,eal.*
	from 
		t_user_admin as u,t_role as r,t_user_role_list as l ,t_employee_accounts_list as eal,t_employee_information as ei,
		t_user_admin as u1,t_user_admin as u2,t_operator_company o
	WHERE 
		u.center_id = l.admin_id 
		and l.role_id = r.id 
		and u.deleted = false 
		and l.deleted = false 
		and r.deleted = false 
		and r.enabled = true 
		and eal.admin_id = u.center_id 
		and eal.employee_id = ei.id
		and eal.deleted = false 
		and u.creator = u1.center_id
		and u.modifier = u2.center_id
		and ei.operator_id = o.company_key
		<if test="uniquekey != null and uniquekey != ''">
			and eal.uniqueKey = #{uniquekey}
		</if>
		<if test="username != null and username != ''">
			and u.user_name = #{username}
		</if>
		<if test="cnName != null and cnName != ''">
			and ei.cn_name like '%${cnName}%'
		</if>
		<if test="enName != null and enName != ''">
			and ei.en_name like '%${enName}%'
		</if>
		<if test="enabled != null">
			and u.enabled = #{enabled}
		</if>
		<if test="operatorId != null">
			and ei.operator_id = #{operatorId}
		</if>
		<if test="mobileNo != null and mobileNo != ''">
			and ei.mobile_no = #{mobileNo}
		</if>
		<if test="roleName != null and roleName != ''">
			and r.role_name like '%${roleName}%'
		</if>
  </select>
  
  
  
  
  <select id="findUserById" parameterType="com.zhilianbao.erp.auth.vo.user.UserVo" resultMap="userVoResultMap">
  	select * from t_user_admin where center_id = #{id} and deleted = false
  </select>
  
  <select id="findUserNameIsExist" parameterType="com.zhilianbao.erp.auth.vo.user.UserVo" resultMap="userVoResultMap">
  	select * from t_user_admin where user_name = #{userName}
  </select>
  
  <select id="getUserInfo" parameterType="com.zhilianbao.erp.auth.vo.user.UserVo" resultMap="userVoResultMap">
	  select 
			u.center_id as centerId,ei.distribution_point as point,o.company_name as companyName,u1.user_name as creatorStr,u2.user_name as modifierStr,u.user_name,u.enabled,r.role_name,ei.cn_name,ei.en_name,ei.mobile_no,ei.operator_id,eal.*
		from 
			t_user_admin as u,t_role as r,t_user_role_list as l ,t_employee_accounts_list as eal,t_employee_information as ei,
			t_user_admin as u1,t_user_admin as u2,t_operator_company as o
		WHERE 
			u.center_id = l.admin_id 
			and l.role_id = r.id 
			and u.deleted = false 
			and l.deleted = false 
			and r.deleted = false 
			and r.enabled = true 
			and eal.admin_id = u.center_id 
			and eal.employee_id = ei.id
			and eal.deleted = false
			and eal.id = #{id}
			and u.creator = u1.center_id
			and u.modifier = u2.center_id
			and ei.operator_id = u.operator_id
			and o.company_key = u.operator_id
  </select>
  
  <select id="getSimpleUserInfo" parameterType="com.zhilianbao.erp.auth.vo.user.UserVo" resultMap="userVoResultMap">
	  SELECT u.`id`,u.`center_id`,u.`user_name`,u.`pwd_md5`,u.`mobile_no`,u.`nickname`,u.`real_name`,emp.`operator_id` 
	  FROM t_user_admin u LEFT JOIN t_employee_information emp ON u.`operator_id`=emp.`operator_id` WHERE user_name = #{userName} limit 1
  </select>
  
  <select id="findIsExistByUserName" resultMap="userVoResultMap">
  		select * from t_user_admin where user_name = #{userName}
  </select>
  

  <insert id="registeUserAccount" useGeneratedKeys="true" keyProperty="id">
  	insert into t_user_admin(
    uniqueKey,operator_id,center_id,user_name,pwd_md5,mobile_no,nickname,real_name,email,head_image_100,head_image_200,
    register_time,last_login_time,enabled ,creator,modifier,create_time,update_time,deleted 
    )values(
  	 uniquekey,operatorId,centerId,userName,pwdMd5,mobileNo,nickname,realName,email,headImage100,headImage200,
  	 registerTime,lastLoginTime,enabled,creator,modifier,createTime,updateTime,deleted
  	)
  </insert>


  <select id="isOwnThisMenu" resultMap="userVoResultMap">
  	select 
  		u.* from t_user_admin u ,t_role r,t_user_role_list ul,t_menu m,t_role_menu_list rm
	where 
		ul.admin_id = u.center_id
		and ul.role_id = r.id
		and rm.role_id = r.id
		and rm.menu_id = m.id
		and rm.enabled = true 
		and rm.deleted = false
		and ul.deleted = false
		and u.enabled = true
		and u.deleted = false
		and r.enabled = true
		and r.deleted = false
		and m.deleted = false
		and m.enabled = true	
		and m.menu_name = #{menuName}
		and u.id = #{id}
  </select>
  
  <select id="findByCenterId" resultMap="userVoResultMap">
  	select * from t_user_admin where center_id = #{centerId} and enabled = true and deleted = false;
  </select>
  
  <select id="findUserByEmployeeAccountListID" parameterType="com.zhilianbao.erp.auth.vo.user.UserVo" resultMap="userVoResultMap">
  	select 
  		u.* from t_user_admin u,t_employee_information ei,t_employee_accounts_list as eal
  	where 
  		eal.admin_id = u.center_id
  		and eal.employee_id = ei.id
  		and eal.id = #{id}
  		and u.deleted = false
  		and ei.deleted = false
  		and ei.enabled = true
		and eal.deleted = false
		and eal.enabled =true
  		
  </select>
  
  <select id="findAllSuperAdmins" resultMap="userVoResultMap">
  	select * from t_user_admin where operator_id = 0;
  </select>
  
  <update id="updateUserStatus" parameterType="com.zhilianbao.erp.auth.entity.user.UserAdminBean">
  	update t_user_admin set enabled = #{enabled} where id = #{id}
  </update>
</mapper>