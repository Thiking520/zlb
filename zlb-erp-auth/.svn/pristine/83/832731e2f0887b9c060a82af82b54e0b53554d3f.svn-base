  <sql id="getUserInfoSql">
	  select id,center_id,user_name,operator_id as company_key, 
      (CASE WHEN operator_id = 0 THEN 0 
           ELSE 1 END) as userType 
      from t_user_admin tua 
    </sql>
    
  <select id="doLogin" parameterType="com.zhilianbao.erp.auth.vo.user.LoginVo" resultMap="loginUserVoMap">
      select A.*,
      IFNULL(toc.id, 0) as operator_id,toc.company_name as companyName
      from (
	      <include refid="getUserInfoSql" /> 
	      <where>
	          <if test="loginType == 0">
	          tua.user_name=#{userName}
	          and tua.pwd_md5=#{pwd}
	          </if>
	          <if test="loginType == 1">
	          tua.user_name=#{userName}
	          </if>
	          and tua.deleted=0
	          and tua.enabled=1
	      </where>
      ) A left join t_operator_company toc on toc.company_key=A.company_key
  </select>
  
  
  
  <select id="queryAllMenu" parameterType="loginOperatorVo" resultMap="loginMenuVoMap">
      SELECT
	    distinct tm.id,
	    tm.menu_name,
        tm.menu_url,
        tm.menu_icon,
        tm.parent_id,
        tm.menu_type,
        tm.module_type,
        tm.module_url,
        tm.menu_order
      FROM
	    t_menu tm,
	    t_user_admin tua,
	    t_user_role_list turl,
	    t_role_menu_list trml,
	    (
	        select * 
	        from t_role 
	        where 
	        operator_id in 
	        <foreach collection="operatorIds" item="item" open="(" close=")" separator="," index="index">
              #{item}
            </foreach>
	    ) tr
	  WHERE
	    tm.id = trml.menu_id
      and turl.role_id = trml.role_id
      and turl.role_id = tr.id
      and turl.admin_id = tua.center_id
      and tua.id=#{userId}
      
      and tua.deleted=0
	  and tua.enabled=1
	  and tm.deleted=0
	  and tm.enabled=1
	  and turl.deleted=0
	  and trml.deleted=0
	  and trml.enabled=1
	  
      order by tm.menu_type asc,tm.menu_order asc 
  </select>
  
  <select id="mulUserName" parameterType="list" resultType="retUserVo">
      select tua.id as id,
             tua.nickname as nickName,
             tua.real_name as realName,
             tua.user_name as userName,
             tua.center_id as centerId 
      from 
      t_user_admin tua
      <where>
          <if test="list != null">
	          tua.center_id in 
	          <foreach collection="list" item="item" open="(" close=")" separator="," index="index">
	              #{item}
	          </foreach>
          </if>
          and tua.deleted=0
	      and tua.enabled=1 
      </where>
  </select>
  
  <select id="qryManagerOperator" parameterType="loginOperatorVo" resultType="loginManagerOperatorVo">
      select toc.id as operatorId,toc.company_name as companyName,
             toc.company_full_name as companyFullName,toc.company_ext_name as companyExtName,
             toc.company_key as companyKey
      from(
	      select 
	          distinct tr.operator_id
	      from 
		      (select * from t_user_admin where id=#{userId}) tua,
		      t_user_role_list turl,
		      (select * from t_role where operator_id != 0) tr
	      where 
		      turl.admin_id = tua.center_id
		      and turl.role_id = tr.id
		      
		      and turl.deleted=0
		      and tua.deleted=0
	          and tua.enabled=1 
	          and tr.deleted=0
	          and tr.enabled=1 
      ) A 
      inner join 
      t_operator_company toc on A.operator_id=toc.company_key
  </select>
  
  
