package com.zhilianbao.erp.auth.mapper.employee;

import java.util.List;

import com.zhilianbao.erp.auth.entity.employee.EmployeeAccountsListBean;
import com.zhilianbao.erp.auth.vo.employee.EmployeeAccountsListVo;

import tk.mybatis.mapper.common.Mapper;

public interface EmployeeAccountsListMapper extends Mapper<EmployeeAccountsListBean> {

	/**
	 * 通过centerId(adminId)查找员工帐号关系
	 * @param eaListVo
	 * @return
	 */
	List<EmployeeAccountsListVo> findByAccount(EmployeeAccountsListVo eaListVo);

	/**
	 * 通过ID查找员工帐号关系
	 * @param userRoleVo
	 * @return
	 */
	EmployeeAccountsListVo findById(EmployeeAccountsListVo userRoleVo);

	/**
	 * 通过员工帐号查找员工绑定关系
	 * @param eaListVo
	 * @return
	 */
	EmployeeAccountsListVo findByUserName(EmployeeAccountsListVo eaListVo);

	/**
	 * 通过运营商ID查找所有员工帐号关系
	 * @param ealVo
	 * @return
	 */
	List<EmployeeAccountsListVo> findAllByOperatorId(EmployeeAccountsListVo ealVo);

	/**
	 * 通过员工IDS查找员工帐号关系列表
	 * @param ealVo
	 * @return
	 */
	List<EmployeeAccountsListVo> findByIdList(EmployeeAccountsListVo ealVo);
}