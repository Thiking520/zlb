<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zhilianbao.erp.auth.mapper.goods.CodeRuleItemMapper" >
  <resultMap id="BaseResultMap" type="com.zhilianbao.erp.auth.vo.goods.CodeRuleItemVo" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="code_type" property="codeType" jdbcType="SMALLINT" />
    <result column="rule_item_name" property="ruleItemName" jdbcType="VARCHAR" />
    <result column="rule_item_value" property="ruleItemValue" jdbcType="VARCHAR" />
    <result column="key_type" property="keyType" jdbcType="INTEGER" />
  </resultMap>
  
  <sql id="Base_Column_List" >
    id, code_type, rule_item_name, rule_item_value, key_type
  </sql>
  
  <!-- 分页查询 -->
  <select id="queryListByPage" resultMap="BaseResultMap">
  	SELECT <include refid="Base_Column_List" /> FROM t_code_rule_item item
  	where 1=1
  	<if test="searchType != null and searchType != '' ">
  	 AND item.code_type = #{searchType}
  	</if>
  </select>
</mapper>