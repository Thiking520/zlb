	@Override
	public ResponseValue<List<DeliveryShortRecordVo>> getOwnPointList(DeliveryRecordSearchVo vo) {
		ResponseValue<List<DeliveryShortRecordVo>> resp=new ResponseValue<List<DeliveryShortRecordVo>>();
		if(vo.getUserId() == null || vo.getOperatorId() == null){
			return resp.failure("用户和运营商不能为空！");
		}
		try{
			List<DeliveryShortRecordVo> list = null;
			if("all".equals(vo.getCustom1())) {//站点档案管理，如果是超管查找所有
				boolean isSuperAdmin = recordService.checkSuperAdmin(vo);
				//运维或者运营超管
				if(isSuperAdmin) {
					PageHelper.offsetPage(vo.getOffset(), vo.getPageSize());
					Map<String, Object> map = new HashMap<String, Object>();
					vo.setUserId(null);
					map.put("vo", vo);
					list = deliveryRecordMapper.findAllPoint(map);	
					//判断角色是否为超管
				} else {
					PageHelper.offsetPage(vo.getOffset(), vo.getPageSize());
					Map<String, Object> map = new HashMap<String, Object>();
					map.put("vo", vo);
					list = deliveryRecordMapper.findAllPoint(map);
				}
			} else {
				PageHelper.offsetPage(vo.getOffset(), vo.getPageSize());
				Map<String, Object> map = new HashMap<String, Object>();
				map.put("vo", vo);
				list = deliveryRecordMapper.findAllPoint(map);
			}
			resp.setData(list);
		}catch(Exception e){
			logger.error("站点信息出错!",vo, e);
			return new ResponseValue<List<DeliveryShortRecordVo>>().err("查询异常");
		}
		return resp;
	}

