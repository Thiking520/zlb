	/**
	* @company zhilianbao
	* @author chengjianhui
	* @date 2017年7月13日下午3:34:42
	* @description:检查覆盖/排除范围名称是否已经存在
	*/
	public ResponseResult<DeliveryScopeVo> checkScopeIfExist(DeliveryScopeVo vo){
		List<DeliveryScopeBean> list = getDeliveryScope(vo);
		if(CollectionUtils.isNotEmpty(list)){
			return new ResponseResult<DeliveryScopeVo>(ResultEnum.NAME_EXISTED);
		}
		return new ResponseResult<DeliveryScopeVo>(ResultEnum.SUCCESSE);
	}
	
	private List<DeliveryScopeBean> getDeliveryScope(DeliveryScopeVo vo){
		Example example = new Example(DeliveryScopeBean.class);
		Criteria criteria = example.createCriteria();
		criteria.andEqualTo("name", vo.getName());
		criteria.andEqualTo("operatorId", vo.getOperatorId());
		return deliveryScopeMapper.selectByExample(example);
	}
	
