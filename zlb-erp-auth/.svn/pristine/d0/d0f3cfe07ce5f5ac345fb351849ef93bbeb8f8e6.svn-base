package com.zhilianbao.erp.auth.facade;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.zhilianbao.erp.auth.service.goods.ICodeRuleService;
import com.zhilianbao.erp.auth.service.goods.facade.ICodeRuleRestService;
import com.zhilianbao.erp.auth.vo.goods.facade.ReqCodeRuleRestVo;
import com.zhilianbao.erp.common.vo.ResponseValue;
/**
 * 单据生成器，供其它模块调用
 * @Company: 智联宝 
 * @author ：chenll
 * @date ：2017年4月11日 上午11:15:32
 */
@Service
public class CodeRuleRestServiceImpl implements ICodeRuleRestService {
	
	@Autowired
	private ICodeRuleService iCodeRuleService;
	
	@Override
	public ResponseValue<String> getCodeNO(ReqCodeRuleRestVo reqCodeRuleRestVo) {
		ResponseValue<String> responseValue=new ResponseValue<String>();
		if(reqCodeRuleRestVo == null || reqCodeRuleRestVo.getCodeType() == null || reqCodeRuleRestVo.getOperatorId() == null){
			return responseValue.failure("参数有误！");
		}
		return iCodeRuleService.getCodeNO(reqCodeRuleRestVo);
	}
}
